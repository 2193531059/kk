<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".RegisterActivity">
    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="40dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/login_input2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/lcon2"
                    android:layout_height="wrap_content"/>
                <com.administrator.seawindow.view.EditTextWithDel
                    android:id="@+id/et_username_register"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_hint"
                    android:textColorHint="#D1D1D1"
                    android:inputType="textPersonName"
                    android:background="@null"
                    style="?android:attr/textViewStyle"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/login_input2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/user"
                    android:layout_height="wrap_content"/>
                <com.administrator.seawindow.view.EditTextWithDel
                    android:id="@+id/et_userphone_register"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/username_hint"
                    android:textColorHint="#D1D1D1"
                    android:inputType="phone"
                    android:background="@null"
                    style="?android:attr/textViewStyle"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/login_input2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="60dp">
                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    app:iiv_icon="@string/gmd_mail_outline"
                    app:iiv_color="#0183E5"
                    app:iiv_size="20dp"/>
                <com.administrator.seawindow.view.EditTextWithDel
                    android:id="@+id/et_email_register"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_hint"
                    android:textColorHint="#D1D1D1"
                    android:inputType="phone"
                    android:background="@null"
                    style="?android:attr/textViewStyle"
                    android:maxLines="1"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/login_input2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/lcon_1"
                    android:layout_height="wrap_content"/>
                <com.administrator.seawindow.view.EditTextWithDel
                    android:id="@+id/et_password_register"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password_hint"
                    android:textColorHint="#D1D1D1"
                    android:inputType="textPassword"
                    android:background="@null"
                    style="?android:attr/textViewStyle"
                    android:maxLines="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/login_input2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/lcon_1"
                    android:layout_height="wrap_content"/>
                <com.administrator.seawindow.view.EditTextWithDel
                    android:id="@+id/et_confirm_password_register"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_password_hint"
                    android:textColorHint="#D1D1D1"
                    android:inputType="textPassword"
                    android:background="@null"
                    style="?android:attr/textViewStyle"
                    android:maxLines="1"/>
            </LinearLayout>

            <Button
                android:text="@string/register"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:textColor="#ffffff"
                android:paddingBottom="10dp"
                android:layout_marginTop="30dp"
                android:textAllCaps="false"
                android:background="@drawable/loginselector"
                android:id="@+id/register_button"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
